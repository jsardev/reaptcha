{
  "name": "reaptcha-monorepo",
  "private": true,
  "workspaces": [
    "lib",
    "example"
  ],
  "scripts": {
    "build": "NODE_ENV=production lerna run build",
    "flow": "flow",
    "lint": "eslint .",
    "test": "ava --verbose 'lib/**/*.test.js'",
    "coverage": "nyc yarn test && nyc report --reporter=text-lcov | coveralls",
    "release": "yarn build && lerna publish --conventional-commits",
    "pre-release": "yarn release --npm-tag next"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "ava": "^1.0.0-beta.8",
    "babel-eslint": "^10.0.0",
    "babel-loader": "^8.0.0",
    "clean-webpack-plugin": "^1.0.0",
    "coveralls": "^3.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "eslint": "^5.0.0",
    "eslint-plugin-flowtype": "3.2.1",
    "eslint-plugin-react": "^7.9.1",
    "flow-bin": "0.92.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "1.3.0",
    "jsdom": "13.1.0",
    "jsdom-global": "^3.0.2",
    "lerna": "^3.2.1",
    "nyc": "^13.2.0",
    "prettier": "^1.13.7",
    "pretty-quick": "^1.6.0",
    "react-hot-loader": "^4.3.0",
    "sinon": "^6.0.0",
    "uglifyjs-webpack-plugin": "^2.0.0",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7",
    "webpack-merge": "^4.1.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "ava": {
    "powerAssert": false,
    "require": [
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "configFile": "./babel.config.js"
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
